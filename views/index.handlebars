<div class="container">
<div class="row d-flex">
    <div class="col">
        <h1>Welcome to Burger Express!</h1>
    </div>
</div>

<div class="row d-flex">
    <div class="col">
        <img src="/img/burger.png" alt="burger">
    </div>
</div>

<br/>

<div class="row d-flex justify-content-center">
    <div class="col">
        <h2>Burgers to Devour:</h2>
        <br/>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col">
        <h2>Burgers Devoured:</h2>
        <br/>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<br/>

<div class="row d-flex">
    <div class="col">
        <h2>Add A Burger:</h2>
        <br/>
        <form class="create-form">
            <div class="form-group">
                <label for="burger-name">Burger Name:</label>
                <input type="text" id="burger-name" name="burger-name">
                <button type="submit">Add A Burger</button>
            </div>
        </form>
    </div>
</div>
</div>